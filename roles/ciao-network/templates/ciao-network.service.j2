[Unit]
Description=CIAO Controller Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/ciao-launcher --cacert=/etc/pki/ciao/CAcert-{{ groups['ciao_controller'][0] }}.pem \
                                 --cert=/etc/pki/ciao/cert-NetworkingAgent-localhost.pem --network=nn \
                                 --logtostderr -v 2

[Install]
WantedBy=multi-user.target
