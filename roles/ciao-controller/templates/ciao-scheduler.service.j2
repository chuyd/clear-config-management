[Unit]
Description=CIAO Scheduler Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/ciao-scheduler --cacert=/etc/pki/ciao/CAcert-{{ groups['ciao_controller'][0] }}.pem \
                                  --cert=/etc/pki/ciao/cert-Scheduler-{{ groups['ciao_controller'][0] }}.pem \
                                  --logtostderr -v 2
User=ciao

[Install]
WantedBy=multi-user.target
