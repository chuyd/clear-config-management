configure:
  scheduler:
    storage_type: file
    storage_uri: file:///etc/ciao/configuration.yaml
  controller:
    compute_port: 8774
    compute_ca: /etc/keystone/ssl/server/{{ ansible_hostname }}.cert.pem
    compute_cert: /etc/keystone/ssl/server/{{ ansible_hostname }}.key.pem
    identity_user: {{ ciao_service_user }}
    identity_password: {{ ciao_service_password }}
  launcher:
    compute_net:
      {{ ciao_compute_subnets | to_nice_yaml }}
    mgmt_net:
      {{ ciao_mgmt_subnets | to_nice_yaml }}
    disk_limit: true
    mem_limit: true
  identity_service:
    type: keystone
    url: https://{{ keystone_fqdn }}:{{ keystone_admin_port }}
